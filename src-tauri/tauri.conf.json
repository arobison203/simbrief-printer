{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "SimBrief Printer",
  "version": "0.1.2",
  "identifier": "com.simbriefprinter.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm exec vite",
    "beforeBuildCommand": "pnpm exec vite build"
  },
  "app": {
    "windows": [
      {
        "title": "SimBrief Printer",
        "width": 1200,
        "height": 900,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/{{owner}}/{{repo}}/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "REPLACE_WITH_YOUR_PUBLIC_KEY_FROM_TAURI_SIGNER_GENERATE"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13",
      "bundleName": "SimBrief Printer"
    }
  }
}
