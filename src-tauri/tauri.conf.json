{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "simbrief-printer",
  "version": "0.1.0",
  "identifier": "com.simbriefprinter.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm exec vite",
    "beforeBuildCommand": "pnpm exec vite build"
  },
  "app": {
    "windows": [
      {
        "title": "SimBrief Printer",
        "width": 1200,
        "height": 900,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
